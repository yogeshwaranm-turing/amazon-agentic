{
  "env": "smart_home",
  "model_provider": "openai",
  "model": "o4-mini",
  "num_trials": 3,
  "temperature": 1,
  "interface_num": 1,
  "task": {
    "user_id": "1",
    "instruction": "You are Zachary Potts, owner of a smart home. You want to use voice commands through your smart speaker to set up a morning routine. First, get your user information and home details. Then, check your living room (room_id: 2) devices to find your smart speaker. Create a morning routine that will run daily at 7 AM starting tomorrow. Add commands to this routine to turn on the living room bulb with 80% brightness and warm white color, and turn on your smart speaker to play your morning playlist.",
    "actions": [
      {
        "name": "get_user_info",
        "arguments": {
          "user_id": "1"
        }
      },
      {
        "name": "get_home_info",
        "arguments": {
          "home_id": "1"
        }
      },
      {
        "name": "get_devices_info",
        "arguments": {
          "room_id": "2"
        }
      },
      {
        "name": "create_routine",
        "arguments": {
          "user_id": 1,
          "home_id": 1,
          "action_time": "07:00",
          "start_action_date": "2025-10-21",
          "action_interval": "daily"
        }
      },
      {
        "name": "add_command",
        "arguments": {
          "device_type": "bulb",
          "routine_id": "1",
          "device_id": "3",
          "device_status": "on",
          "bulb_brightness_level": "80",
          "bulb_color": "warm white"
        }
      },
      {
        "name": "add_command",
        "arguments": {
          "device_type": "speaker",
          "routine_id": "1",
          "device_id": "19",
          "device_status": "on"
        }
      }
    ],
    "outputs": ["zachary.potts@outlook.com", "1", "2", "daily", "on"],
    "edges": [
      {
        "from": "instruction",
        "to": "get_user_info",
        "connection": {
          "input": "user_id",
          "output": "user_id"
        }
      },
      {
        "from": "get_user_info",
        "to": "get_home_info",
        "connection": {
          "input": "home_id",
          "output": "primary_address_id"
        }
      },
      {
        "from": "instruction",
        "to": "get_devices_info",
        "connection": {
          "input": "room_id",
          "output": "room_id"
        }
      },
      {
        "from": "get_user_info",
        "to": "create_routine",
        "connection": {
          "input": "user_id",
          "output": "user_id"
        }
      },
      {
        "from": "get_home_info",
        "to": "create_routine",
        "connection": {
          "input": "home_id",
          "output": "home_id"
        }
      },
      {
        "from": "instruction",
        "to": "create_routine",
        "connection": {
          "input": "action_time",
          "output": "routine_time"
        }
      },
      {
        "from": "instruction",
        "to": "create_routine",
        "connection": {
          "input": "start_action_date",
          "output": "start_date"
        }
      },
      {
        "from": "instruction",
        "to": "create_routine",
        "connection": {
          "input": "action_interval",
          "output": "interval"
        }
      },
      {
        "from": "create_routine",
        "to": "add_command",
        "connection": {
          "input": "routine_id",
          "output": "routine_id"
        }
      },
      {
        "from": "get_devices_info",
        "to": "add_command",
        "connection": {
          "input": "device_id",
          "output": "device_id"
        }
      },
      {
        "from": "instruction",
        "to": "add_command",
        "connection": {
          "input": "device_status",
          "output": "status"
        }
      },
      {
        "from": "instruction",
        "to": "add_command",
        "connection": {
          "input": "bulb_brightness_level",
          "output": "brightness"
        }
      },
      {
        "from": "instruction",
        "to": "add_command",
        "connection": {
          "input": "bulb_color",
          "output": "color"
        }
      },
      {
        "from": "create_routine",
        "to": "add_command",
        "connection": {
          "input": "routine_id",
          "output": "routine_id"
        }
      },
      {
        "from": "get_devices_info",
        "to": "add_command",
        "connection": {
          "input": "device_id",
          "output": "speaker_device_id"
        }
      },
      {
        "from": "instruction",
        "to": "add_command",
        "connection": {
          "input": "device_status",
          "output": "status"
        }
      }
    ],
    "num_edges": 16
  }
}
