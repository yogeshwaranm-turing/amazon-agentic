{
  "env": "incident_management_redos",
  "model_provider": "openai",
  "model": "o4-mini",
  "num_trials": 3,
  "temperature": 1,
  "interface_num": 1,
  "task": {
    "user_id": "1",
    "instruction": "You are Melissa Jones, an incident manager with email melissa.jones@outlook.com. A network incident (INC0000025) has been reported. You need to discover the incident details first, then assess its severity based on medium impact and medium urgency. After assessing, update the incident status to 'in_progress' and assign it to technical user ID 15. Finally, add a work note documenting 'Incident assessed and assigned to technical team for resolution'.",
    "actions": [
      {
        "name": "discover_parties",
        "arguments": {
          "entity_type": "users",
          "filters": {
            "email": "melissa.jones@outlook.com"
          }
        }
      },
      {
        "name": "discover_incident_tracking",
        "arguments": {
          "entity_type": "incidents",
          "filters": {
            "incident_number": "INC0000025"
          }
        }
      },
      {
        "name": "assess_incident_severity",
        "arguments": {
          "incident_id": "25",
          "category": "network",
          "impact": "medium",
          "urgency": "medium"
        }
      },
      {
        "name": "manage_incidents",
        "arguments": {
          "action": "update",
          "incident_id": "25",
          "incident_data": {
            "status": "in_progress",
            "assigned_to": "15",
            "severity": "P3",
            "acknowledged_at": "2025-10-20T10:00:00"
          }
        }
      },
      {
        "name": "manage_work_notes",
        "arguments": {
          "action": "create",
          "work_note_data": {
            "incident_id": "25",
            "created_by": "1",
            "note_text": "Incident assessed and assigned to technical team for resolution",
            "note_type": "internal"
          }
        }
      }
    ],
    "outputs": ["melissa.jones@outlook.com", "25", "P3", "in_progress"],
    "edges": [
      {
        "from": "instruction",
        "to": "discover_parties",
        "connection": {
          "input": "email",
          "output": "user_email"
        }
      },
      {
        "from": "instruction",
        "to": "discover_incident_tracking",
        "connection": {
          "input": "incident_number",
          "output": "incident_number"
        }
      },
      {
        "from": "discover_incident_tracking",
        "to": "assess_incident_severity",
        "connection": {
          "input": "incident_id",
          "output": "incident_id"
        }
      },
      {
        "from": "instruction",
        "to": "assess_incident_severity",
        "connection": {
          "input": "category",
          "output": "incident_category"
        }
      },
      {
        "from": "assess_incident_severity",
        "to": "manage_incidents",
        "connection": {
          "input": "incident_id",
          "output": "incident_id"
        }
      },
      {
        "from": "assess_incident_severity",
        "to": "manage_incidents",
        "connection": {
          "input": "severity",
          "output": "calculated_severity"
        }
      },
      {
        "from": "discover_parties",
        "to": "manage_work_notes",
        "connection": {
          "input": "created_by",
          "output": "user_id"
        }
      },
      {
        "from": "discover_incident_tracking",
        "to": "manage_work_notes",
        "connection": {
          "input": "incident_id",
          "output": "incident_id"
        }
      }
    ],
    "num_edges": 8
  }
}
